<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_marginBottom="@dimen/dm_15"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm_200"
    android:layout_centerVertical="true">


    <ImageView
        android:id="@+id/iv_user_pic"
        android:src="@drawable/ic_rmzb_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_live_status"
        android:paddingBottom="@dimen/dm_3"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:paddingTop="@dimen/dm_3"
        android:text="LIVE"
        android:textColor="@color/white"
        android:textSize="@dimen/t10" />

    <LinearLayout
        android:id="@+id/rl_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_status"
        android:layout_margin="@dimen/dm_5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/iv_location"
            android:text="保密"
            android:textColor="@color/white"
            android:textSize="@dimen/t12" />


        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:src="@drawable/ic_view_count" />


        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:text="1111"
            android:textColor="@color/white"
            android:textSize="@dimen/t10" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dm_15"
        android:layout_marginLeft="@dimen/dm_5"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/t28" />


</RelativeLayout>
