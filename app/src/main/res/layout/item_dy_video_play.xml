<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/windowBackground"
                android:orientation="vertical">


    <com.zb.wyd.widget.DyVideoPlayer
        android:id="@+id/dy_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="centerCrop"
        android:visibility="visible"
        />
    <LinearLayout
        android:layout_width="@dimen/dm_50"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dm_10"
        android:orientation="vertical">

        <com.zb.wyd.widget.CircleImageView
            android:id="@+id/iv_user_pic"
            android:layout_width="@dimen/dm_50"
            android:layout_height="@dimen/dm_50"
            android:src="@drawable/ic_logo"/>
        <ImageView
            android:id="@+id/iv_love"
            android:layout_width="@dimen/dm_50"
            android:layout_height="@dimen/dm_50"
            android:layout_marginTop="@dimen/dm_30"
            android:src="@drawable/ic_video_love_selector"/>


        <TextView
            android:id="@+id/tv_love_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_5"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dm_50"
            android:layout_height="@dimen/dm_50"
            android:layout_marginTop="@dimen/dm_50"
            android:src="@drawable/ic_video_share"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_tips"
        android:layout_marginBottom="@dimen/dm_10"
        android:layout_marginLeft="@dimen/dm_10"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dm_20"
        android:layout_marginLeft="@dimen/dm_10"
        android:visibility="gone"
        android:paddingLeft="@dimen/dm_10"
        android:paddingRight="@dimen/dm_10"
        android:paddingTop="@dimen/dm_3"
        android:paddingBottom="@dimen/dm_3"
        android:background="@drawable/green_frame1_5dp"
        android:textColor="@color/green"/>
</RelativeLayout>