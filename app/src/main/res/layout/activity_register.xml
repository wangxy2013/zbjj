<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_bg"
        android:src="@drawable/bg_login"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dm_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm_15"
            android:src="@drawable/ic_white_back"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_5"
            android:gravity="center_horizontal"
            android:text="四虎影库"
            android:textColor="@color/white"
            android:textSize="@dimen/t14"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_20"
            android:background="@drawable/login_frame_45dp"
            android:padding="@dimen/dm_15">


            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_selector"/>

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/iv_account"
                android:background="@color/transparent"
                android:hint="建议用QQ或手机号注册"
                android:maxLength="16"
                android:textColor="@drawable/login_font_selector"
                android:textColorHint="@color/white"
                android:textSize="@dimen/t16"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_10"
            android:background="@drawable/login_frame_45dp"
            android:padding="@dimen/dm_15">


            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pwd_selector"/>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/iv_pwd"
                android:background="@color/transparent"
                android:hint="密码长度为7-18位"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@drawable/login_font_selector"
                android:textColorHint="@color/white"
                android:textSize="@dimen/t16"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_10"
            android:background="@drawable/login_frame_45dp"
            android:padding="@dimen/dm_15">


            <ImageView
                android:id="@+id/iv_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_invitation_selector"/>

            <EditText
                android:id="@+id/et_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/iv_invitation"
                android:background="@color/transparent"
                android:hint="邀请码"
                android:textColor="@drawable/login_font_selector"
                android:textColorHint="@color/white"
                android:textSize="@dimen/t16"/>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_30"
            android:background="@drawable/btn_login_frame_45dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_25"
            android:layout_marginTop="@dimen/dm_5"
            android:text="已有账号?去登录"
            android:textColor="@color/white"
            android:textSize="@dimen/t14"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dm_15"
        android:gravity="center_horizontal"
        android:text="防丢邮箱,发邮件到xjshangmen@gmail.com获取最新地址"
        android:textColor="@color/white"
        android:textSize="@dimen/t14"/>
</RelativeLayout>