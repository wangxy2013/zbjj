<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <include layout="@layout/layout_head"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/gray_frame_5dp"
        android:padding="@dimen/dm_10">
        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_on"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_email"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:inputType="phone"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/gray_frame_5dp"
        >
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_10"
            android:src="@drawable/ic_pwd_on"/>



        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_toLeftOf="@+id/tv_code"
            android:layout_toRightOf="@+id/iv_code"
            android:background="@color/transparent"
            android:hint="密码长度为6-18位"
            android:maxLength="18"
            android:inputType="textPassword"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/gray_frame_5dp"
        >
        <ImageView
            android:id="@+id/iv_code1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_10"
            android:src="@drawable/ic_pwd_on"/>



        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_pwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_toRightOf="@+id/iv_code1"
            android:background="@color/transparent"
            android:hint="再次输入密码"
            android:maxLength="20"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/common_yellow_5dp"
        android:text="绑定"
        android:textColor="@color/blackC"
        android:textSize="@dimen/t16"/>


</LinearLayout>