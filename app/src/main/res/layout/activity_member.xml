<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/windowBackground"
              android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/member_bg"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dm_5"
        >


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dm_8"
            android:src="@drawable/ic_back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_30"
            android:layout_marginRight="@dimen/dm_30"
            android:gravity="center"
            android:padding="@dimen/dm_8"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"
            />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_10"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"
            />


    </RelativeLayout>


    <RelativeLayout
        android:padding="@dimen/dm_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zb.wyd.widget.CircleImageView
            android:id="@+id/iv_user_pic"
            android:src="@drawable/ic_user"
            android:layout_width="@dimen/dm_70"
            android:layout_height="@dimen/dm_70"/>


        <LinearLayout
            android:layout_toRightOf="@+id/iv_user_pic"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="xm"
                android:id="@+id/tv_user_name"
                android:textSize="@dimen/t16"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dm_10"
                android:text="开通会员可免费观看全平台资源"
                android:textSize="@dimen/t12"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/dm_10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="选择会员类型"
            android:textSize="@dimen/t16"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dm_10"
            android:text="开通会员可观看全平台的资源"
            android:textSize="@dimen/t12"
            android:textColor="@color/blackB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:padding="@dimen/dm_5"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_margin="@dimen/dm_5"
            android:gravity="center_horizontal"
            android:background="@drawable/pay_style_selector"
            android:orientation="vertical"
            android:id="@+id/ll_month"
            android:layout_width="0dp"
            android:padding="@dimen/dm_10"
            android:layout_weight="1"
            android:layout_height="160dp">


            <TextView
                android:layout_marginTop="@dimen/dm_15"
                android:textColor="@color/blackB"
                android:textSize="@dimen/t20"
                android:text="包月费用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_month"
                android:textColor="#3e1331"
                android:textSize="@dimen/t26"
                android:text="¥0"
                android:layout_marginTop="@dimen/dm_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/dm_5"
            android:gravity="center_horizontal"
            android:background="@drawable/pay_style_selector"
            android:orientation="vertical"
            android:id="@+id/ll_quarter"
            android:layout_width="0dp"
            android:padding="@dimen/dm_10"
            android:layout_weight="1"
            android:layout_height="160dp">


            <TextView
                android:layout_marginTop="@dimen/dm_15"
                android:textColor="@color/blackB"
                android:textSize="@dimen/t20"
                android:text="按季付费"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_season"
                android:textColor="#3e1331"
                android:textSize="@dimen/t26"
                android:text="¥0"
                android:layout_marginTop="@dimen/dm_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="@dimen/dm_10"
                android:src="@drawable/ic_90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/dm_5"
            android:gravity="center_horizontal"
            android:background="@drawable/pay_style_selector"
            android:orientation="vertical"
            android:id="@+id/ll_year"
            android:layout_width="0dp"
            android:padding="@dimen/dm_10"
            android:layout_weight="1"
            android:layout_height="160dp">


            <TextView
                android:layout_marginTop="@dimen/dm_15"
                android:textColor="@color/blackB"
                android:textSize="@dimen/t20"
                android:text="按年付费"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_year"
                android:textColor="#3e1331"
                android:textSize="@dimen/t26"
                android:text="¥0"
                android:layout_marginTop="@dimen/dm_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="@dimen/dm_10"
                android:src="@drawable/ic_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/common_pay_5dp"
        android:text="确定充值"
        android:textColor="@color/white"
        android:textSize="@dimen/t16" />

<TextView
    android:layout_marginTop="@dimen/dm_15"
    android:text="开通续费权益说明"
    android:padding="@dimen/dm_10"
    android:textSize="@dimen/t14"
    android:textColor="@color/blackB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:paddingBottom="@dimen/dm_20"
        android:text="付款成功之后即可开通会员，如果是续费会员，续费时间自动延长 开通后就可以享受全平台观看视频和直播。"
        android:paddingRight="@dimen/dm_10"
        android:paddingLeft="@dimen/dm_10"
        android:textSize="@dimen/t12"
        android:textColor="#9B9B9B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>


</LinearLayout>