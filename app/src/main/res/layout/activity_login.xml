<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_main"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/windowBackground"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_15"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm_15"
            android:src="@drawable/ic_white_back"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_5"
            android:gravity="center_horizontal"
            android:text="四虎影库"
            android:textColor="@color/white"
            android:textSize="@dimen/t14"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_20"
            android:background="@drawable/login_frame_45dp"
            android:padding="@dimen/dm_15">


            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_selector"/>

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/iv_account"
                android:background="@color/transparent"
                android:hint="请输入用户名"
                android:maxLength="16"
                android:textColor="@drawable/login_font_selector"
                android:textColorHint="@color/white"
                android:textSize="@dimen/t16"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_20"
            android:background="@drawable/login_frame_45dp"
            android:padding="@dimen/dm_15">


            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pwd_selector"/>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/iv_pwd"
                android:background="@color/transparent"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@drawable/login_font_selector"
                android:textColorHint="@color/white"
                android:textSize="@dimen/t16"/>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_30"
            android:background="@drawable/btn_login_frame_45dp"
            android:text="登录"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_10"
            android:background="@drawable/btn_register_frame_45dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>
<RelativeLayout
    android:layout_marginLeft="@dimen/dm_25"
    android:layout_marginRight="@dimen/dm_25"
    android:layout_marginTop="@dimen/dm_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_recovery_pwd_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过邮箱找密码"
        android:textColor="@color/white"
        android:textSize="@dimen/t14"/>

    <TextView
        android:layout_below="@+id/tv_recovery_pwd_email"
        android:id="@+id/tv_recovery_pwd_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过手机找密码"
        android:textColor="@color/white"
        android:textSize="@dimen/t14"/>

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/tv_rest_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回用户名"
        android:textColor="@color/white"
        android:textSize="@dimen/t14"/>
</RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dm_15"
        android:gravity="center_horizontal"
        android:text="防丢邮箱,发邮件到xjshangmen@gmail.com获取最新地址"
        android:textColor="@color/white"
        android:textSize="@dimen/t14"/>
</RelativeLayout>